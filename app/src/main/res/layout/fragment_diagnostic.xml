<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.base.DiagnosticFragment"
    android:background="#FFF">

    <ImageView
        android:src="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/doctor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My personal doctor"
        android:textColor="#FFF"
        android:textSize="35sp"
        android:fontFamily="@font/notosans_bold"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/first_stade"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:textAlignment="center"
        android:background="@color/cyan"
        app:layout_constraintTop_toBottomOf="@+id/doctor_tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/first_stade"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:text="You are ok? Everything is ok?"
                android:textColor="#FFF"/>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_stade"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:background="#FFA500"
        app:layout_constraintTop_toBottomOf="@+id/first_stade">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/second_state"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:text="You think you are sick? Maybe Corona? Stay home!"
                android:textColor="#FFF"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/third_stade"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:textAlignment="center"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/second_stade">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/third_stade"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="You have corona virus! Stay quarantine mode"
                android:textSize="16sp"
                android:textColor="#FFF"/>

        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/donnate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:textAlignment="center"
        android:background="#48D1CC"
        app:layout_constraintTop_toBottomOf="@+id/third_stade">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/exclamation"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Help humanity donnating blood! \n Someone needs you"
                android:textSize="16sp"
                android:textColor="#FFF"/>
        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>